<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#fff">
    <LinearLayout android:layout_height="wrap_content"
        android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:id="@+id/screenVA"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#186CA8">
            <ImageButton
                android:paddingRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:src="@drawable/back"
                android:background="#11F44336"
                android:layout_gravity="center_horizontal"
                android:id="@+id/btnReturn"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Từ điển Việt - Anh"
                android:textSize="25dp"
                android:textColor="@color/white"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/lnva"
                android:background="#EBEBE1"
                android:layout_marginTop="20dp"
                tools:ignore="MissingConstraints">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:background="#fff">
                    <ImageButton
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@mipmap/ic_searchva"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"/>
                    <EditText
                        android:layout_width="300dp"
                        android:layout_height="60dp"
                        android:hint="Nhập từ cần tra"
                        android:textColorHint="@color/black"
                        android:background="#fff"
                        android:textSize="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="center_vertical"
                        android:typeface="serif"
                        android:textColor="@color/black"
                        android:inputType="textCapCharacters"/>
                    <ImageButton
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@mipmap/ic_delete"
                        android:layout_gravity="center"
                        android:id="@+id/btndl1"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
